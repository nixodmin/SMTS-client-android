<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Правая панель (сообщения) - изначально скрыта -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@android:color/background_light">

        <!-- Блок сообщений -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/border_background"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Сообщения"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#2196f3"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messagesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="4dp"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- Блок ввода сообщения -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_background"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ввод сообщения"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:layout_marginBottom="8dp" />

            <!-- Кнопки отправки -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
					android:id="@+id/sendFileButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Прикрепить"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Отправить"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Левая панель (контакты и информация) - изначально видна -->
    <LinearLayout
        android:id="@+id/leftPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/background_light">

        <!-- Блок информации -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_background"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Ваш текущий статус"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#2196f3"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/clientInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не подключено"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Блок контактов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/border_background"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Установленные соединения"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contactsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Кнопка подключения -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Соединить с контактом"
            android:textSize="12sp" />

        <!-- Подсказка для пользователя -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Двойное нажатие - переход к сообщениям"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</FrameLayout>